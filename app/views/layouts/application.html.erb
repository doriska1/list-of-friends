<!DOCTYPE html>
<html>
  <head>
    <title>Friends</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= hotwire_livereload_tags if Rails.env.development? %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <p class="navbar-brand"> <%= application_title %></p>
        <div class="collapse navbar-collapse" id="navbarNav">
          <div class="navbar-nav">
            <%= render "shared/nav_link", label: "All", path: root_path %>
            <%= render "shared/nav_link", label: "School", path: school_friends_path %>
            <%= render "shared/nav_link", label: "Childhood", path: childhood_friends_path %>
            <%= render "shared/nav_link", label: "College", path: college_friends_path %>
            <%= render "shared/nav_link", label: "Work", path: work_friends_path %>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
